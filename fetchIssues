async function exportIssues(owner, repo) {
    try {
        const response = await fetch(`https://api.github.com/repos/${owner}/${repo}/issues`);
        if (!response.ok) {
            throw new Error('Failed to fetch issues');
        }
        const issues = await response.json();
        formatAndExportIssues(issues);
    } catch (error) {
        console.error('Error exporting issues:', error);
    }
}

function formatAndExportIssues(issues) {
    try {
        if (!Array.isArray(issues)) {
            throw new Error('Issues data is not an array');
        }
        // Format issues and export them
        // ...
    } catch (error) {
        console.error('Error formatting issues:', error);
    }
}

// Example usage
const owner = 'JJAleman';
const repo = 'https://github.com/JJAleman/FEMasters-react-practice.gityour_repository';

exportIssues(owner, repo);
